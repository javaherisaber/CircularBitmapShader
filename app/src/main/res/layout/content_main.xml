<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity"
        tools:ignore="PrivateResource">

    <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            tools:ignore="ContentDescription" app:layout_constraintHorizontal_chainStyle="spread"/>

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView1" tools:ignore="ContentDescription"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1"/>

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            tools:ignore="ContentDescription" app:layout_constraintBottom_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            tools:ignore="ContentDescription"/>

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            tools:ignore="ContentDescription" app:layout_constraintBottom_toBottomOf="@+id/imageView4"/>

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/marker_size"
            android:layout_height="@dimen/marker_size"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            tools:ignore="ContentDescription" app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>